$sp: 767px; //max
$tab: 768px; //min
$tab-max: 1023px;
$pc: 1024px; //min

@mixin sp {
  @media (max-width: ($sp)) {
    @content;
  }
}

@mixin tab {
  @media screen and (min-width: ($tab)) and (max-width: ($tab-max)) {
    @content;
  }
}

@mixin pc {
  @media (min-width: ($pc)) {
    @content;
  }
}


.text {
  z-index: 0;
  background-size: contain;
  background-repeat: no-repeat;
  position: relative;
  background-size: 150px;
}

.text::before {
  content: '';
  background-image: url("<%= asset_path('tennis_ball.png') %>");
  opacity: 0.4;
  filter: blur(5px);
  position: absolute;
  top: -90px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  z-index: -1;

  @include sp {
    background-size: 120px;
    left: -30px;
    opacity: 1;
  }

  @include tab {
    background-size: 150px;
  }

  @include pc {
    background-size: 200px;
    left: -60px;
  }
}