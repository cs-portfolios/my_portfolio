$sp: 575px;
$tab: 768px;
$pc: 1024px;

@mixin sp {
  @media (max-width: 575px) {
    @content;
  }
}

@mixin tab {
  @media (min-width: 768px) {
    @content;
  }
}

@mixin pc {
  @media (min-width: 1024px) {
    @content;
  }
}


.home-page {
  z-index: 0;
  <%# background-color: rgb(0,163,175); %>
  background-size: contain;
  background-repeat: no-repeat;
  position: relative;
}

.home-page::before {
  content: '';
  background-image: url("<%= asset_path('nature-2576652_1280.jpg') %>");
  opacity: 0.7;
  filter: blur(5px);
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  z-index: -1;

  @include sp {
    background-size: cover;
    left: -80px;
  }

  @include tab {
    background-size: cover;
  }
}